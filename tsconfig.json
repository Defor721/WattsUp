{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "tailwindcss": ["./node_modules/tailwindcss"]
    }
  },
  "include": ["src/**/*", "tailwind.config.ts"], // 추가
  "exclude": ["node_modules", "dist"]
}
